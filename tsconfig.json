{
  "compilerOptions": {
    // map `@/*` -> `src/*` so both `tsc` and IDEs resolve imports like `@/Pages/...`
    "baseUrl": ".",
    "typeRoots": ["./types", "./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "Src/*": ["src/*"],
      "src/*": ["src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
